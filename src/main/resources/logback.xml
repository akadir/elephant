<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <timestamp key="today" datePattern="yyyy-MM-dd"/>
    <!-- Stop output INFO at start -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <Target>System.out</Target>
        <encoder>
            <pattern>%-5p %d{yyyy-MM-dd HH:mm:ss} %-33c{1} %m%n</pattern>
        </encoder>
    </appender>

    <appender name="elephant" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>log/elephant.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <totalSizeCap>50MB</totalSizeCap>
            <fileNamePattern>log/old/elephant-%d{yyyy-MM-dd, GMT+3}.log.gz</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%-5p %d{yyyy-MM-dd HH:mm:ss} %-35c{1} %m%n</pattern>
        </encoder>
    </appender>

    <logger name="twitter4j" level="OFF"/>

    <root level="DEBUG">
        <appender-ref ref="stdout"/>
        <appender-ref ref="elephant"/>
    </root>
</configuration>